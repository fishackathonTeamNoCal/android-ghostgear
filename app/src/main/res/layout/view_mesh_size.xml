<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingBottom="30dp"
    android:layout_centerHorizontal="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/meshsize_webbing_dimension"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:background="@color/grey_white_1000"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_meshSize1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/mesh_size_less_than_one_finger"
                        android:layout_weight="0.33"/>
                    <ImageView
                        android:id="@+id/img_meshSize2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/mesh_size_one_finger"
                        android:layout_weight="0.33"/>
                    <ImageView
                        android:id="@+id/img_meshSize3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/mesh_size_two_finger"
                        android:layout_weight="0.33"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_meshSize4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/mesh_size_three_finger"
                        android:layout_weight="0.33"/>
                    <ImageView
                        android:id="@+id/img_meshSize5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/mesh_size_four_finger"
                        android:layout_weight="0.33"/>
                    <ImageView
                        android:id="@+id/img_meshSize6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/mesh_size_fist"
                        android:layout_weight="0.33"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_meshSize7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/mesh_size_clasped_fist"
                        android:layout_weight="0.33"/>
                    <ImageView
                        android:id="@+id/img_meshSize8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/mesh_size_open_hand"
                        android:layout_weight="0.33"/>
                    <ImageView
                        android:id="@+id/img_meshSize9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/mesh_size_greater_than_open_hand"
                        android:layout_weight="0.33"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>