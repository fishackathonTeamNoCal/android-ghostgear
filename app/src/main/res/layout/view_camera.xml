<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@color/red_100"
            android:minWidth="300dp"
            android:scaleType="center"
            android:id="@+id/ivBigPicture"
            android:layout_alignBottom="@+id/bvTakeBigPicture"
            android:layout_toLeftOf="@id/button"
           />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/bvTakeBigPicture"
           />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:minWidth="300dp"
            android:background="@color/red_100"
            android:id="@+id/ivSmallPicture"
            android:layout_alignBottom="@+id/bvTakeSmallPicture"
            android:layout_toLeftOf="@+id/bvTakeSmallPicture"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/bvTakeSmallPicture"

            />
    </RelativeLayout>
</LinearLayout>